<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form login-form'}, remote: true) do |f| %>
  <div class="form-group">
    <%= f.text_field :username, autocomplete: "off", class: "form-control", id: "LoginFormText", placeholder: "Username" %>
    <span class="form-control-border"></span>
  </div>

  <div class="form-group">
    <%= f.email_field :email, autofocus: true, class: "form-control", id: "LoginFormEmail" ,placeholder: "Email" %>
    <span class="form-control-border"></span>
  </div>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: "off", class: "form-control", id: "LoginFormPassword", placeholder: "Password" %>
    <span class="form-control-border"></span>
  </div>

  <div class="buttons-container">
    <div class="row align-items-center">
      <div class="col-6">
        <%= f.submit "Sign up", class: 'btn btn-primary btn-block' %>
      </div>
    </div>
  </div>
<% end %>
