<div class="tab-pane fade show active" id="allPosts" role="tabpanel" aria-labelledby="allPostsTab">
  <div class="main-container">
    <%= render partial: 'sidebar_container' %>
    <div class="content-container mobile-order-1">
      <div class="content-block article article-short description">
        <div class="article-header">
          <h3>About Event</h3>
        </div>
        <div class="article-body with-padding">
          <div class='notes'>
            <p class='short-note'>
              <%= truncate(@event.about, length: 350, omission: '', escape: false) { link_to '&nbsp;<i class="fa fa-long-arrow-right" aria-hidden="true"></i><span>Read More</span>'.html_safe, '#', 'data-behavior': 'read_more'} %>
            </p>
            <p class='full-note hidden'>
              <%= @event.about %>
              <br/>
              <%= link_to 'read less', '#', 'data-behavior': 'read_less' %>
            </p>
          </div>
        </div>
      </div>
    </div>
    <div class="content-container mobile-order-2">
      <%= render partial: 'entities/image_slider', locals: { parent: 'allPosts', photos: @event.photos, type: 'event' } %>
      <%= render partial: 'posts/add_post', locals: { target: '#allPosts .mobile-order-2' } %>
    </div>
    <div class="content-container mobile-order-3">
      <%= render partial: 'posts/index', locals: { posts: current_entity.posts } %>
    </div>
  </div>
</div>
