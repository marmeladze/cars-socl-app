<div class="content-container full-width">
  <div class="content-block article article-short">
    <div class="article-header">
      <h4><%= title %></h4>
    </div>
    <div class="article-body">
      <div class="cars-list-container full-width">
        <% motors.each do |motor| %>
          <div class="car-container">
            <%= link_to motor_path(motor), class: 'image-container', target: '_blank' do %>
              <%= image_tag(motor.avatar.thumb.url) %>
            <% end %>
            <div class="car-info">
              <%= link_to motor.name, motor_path(motor), class: 'car-title' %>
              <span class="car-description"><%= motor.body_type %></span>
              <span class="car-stats"><i class="zmdi zmdi-eye"></i><span>0 Views</span></span>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
